<Fluent:RibbonWindow x:Class="logviewer.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        Title="Log Viewer" Height="714" Width="872" MinHeight="500" MinWidth="500">
    <Grid>
        <Fluent:Ribbon x:Name="Ribbon">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                    <Fluent:BackstageTabControl>
                        <Fluent:BackstageTabItem Header="Open ..."/>
                        <Fluent:Button Header="Export"/>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
            <!--Tabs-->
            <Fluent:RibbonTabItem Header="View">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button x:Name="ButtonOpen" Header="Open"
                           LargeIcon="Images\LargeIcon.png"  Icon="Images\SmallIcon.png"/>
                    <Fluent:Button x:Name="Button1" Header="Button1" Icon="Images\SmallIcon.png"
                           LargeIcon="Images\LargeIcon.png" SizeDefinition = "Middle, Middle, Small" />
                    <Fluent:Button x:Name="Button2" Header="Button2" Icon="Images\SmallIcon.png"
                           LargeIcon="Images\LargeIcon.png" SizeDefinition = "Middle, Middle, Small" />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            
            <Fluent:RibbonTabItem Header="Settings">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button x:Name="Button4" Header="Button1" Icon="Images\SmallIcon.png"
                           LargeIcon="Images\LargeIcon.png" SizeDefinition = "Middle, Middle, Small" />
                    <Fluent:Button x:Name="Button5" Header="Button2" Icon="Images\SmallIcon.png"
                           LargeIcon="Images\LargeIcon.png" SizeDefinition = "Middle, Middle, Small" />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>
    </Grid>
</Fluent:RibbonWindow>
