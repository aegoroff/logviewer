<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">x86</Platform>
    <ProductVersion>3.6</ProductVersion>
    <ProjectGuid>1c0ed62b-d506-4e72-bbc2-a50d3926466e</ProjectGuid>
    <SchemaVersion>2.0</SchemaVersion>
    <OutputName>logviewer.install.bootstrap</OutputName>
    <OutputType>Bundle</OutputType>
    <SignOutput>true</SignOutput>
    <WixTargetsPath Condition=" '$(WixTargetsPath)' == '' AND '$(MSBuildExtensionsPath32)' != '' ">$(MSBuildExtensionsPath32)\Microsoft\WiX\v3.x\Wix.targets</WixTargetsPath>
    <WixTargetsPath Condition=" '$(WixTargetsPath)' == '' ">$(MSBuildExtensionsPath)\Microsoft\WiX\v3.x\Wix.targets</WixTargetsPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|x86' ">
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <IntermediateOutputPath>obj\$(Configuration)\</IntermediateOutputPath>
    <DefineConstants>Debug;CONFIGURATION=Debug</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|x86' ">
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <IntermediateOutputPath>obj\$(Configuration)\</IntermediateOutputPath>
    <DefineConstants>CONFIGURATION=Release</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Bundle.wxs" />
  </ItemGroup>
  <ItemGroup>
    <WixExtension Include="WixNetFxExtension">
      <HintPath>$(WixExtDir)\WixNetFxExtension.dll</HintPath>
      <Name>WixNetFxExtension</Name>
    </WixExtension>
    <WixExtension Include="WixBalExtension">
      <HintPath>$(WixExtDir)\WixBalExtension.dll</HintPath>
      <Name>WixBalExtension</Name>
    </WixExtension>
  </ItemGroup>
  <ItemGroup>
    <None Include="Theme.xml" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Theme.ru.wxl" />
    <None Include="Theme.wxl" />
  </ItemGroup>
  <Import Project="$(WixTargetsPath)" />
  <Target Name="SignBundleEngine">
	<CreateItem Include="@(SignBundleEngine)">
       <Output ItemName="SigningInput" TaskParameter="Include"/>
    </CreateItem>
	<Exec Command="MSBuild $(MsBuildThisFile) /t:SignCommand /nologo /noconsolelogger"/>
  </Target>
  <Target Name="SignBundle">
	<CreateItem Include="@(SignBundle)">
       <Output ItemName="SigningInput" TaskParameter="Include"/>
    </CreateItem>
	<Exec Command="MSBuild $(MsBuildThisFile) /t:SignCommand /nologo /noconsolelogger"/>
  </Target>
  <Target Name="SignMsi">
	<CreateItem Include="@(SignMsi)">
       <Output ItemName="SigningInput" TaskParameter="Include"/>
    </CreateItem>
	<Exec Command="MSBuild $(MsBuildThisFile) /t:SignCommand /nologo /noconsolelogger"/>
  </Target>
  <Target Name="SignCabs">
	<CreateItem Include="@(SignCabs)">
       <Output ItemName="SigningInput" TaskParameter="Include"/>
    </CreateItem>
	<Exec Command="MSBuild $(MsBuildThisFile) /t:SignCommand /nologo /noconsolelogger"/>
  </Target>
  
  <Target Name="SignCommand">
	 <Exec 
		Condition="$(KeyFile) != '' AND $(CertPassword) != '' AND $(SignTool) != ''" 
		Command="&quot;$(SignTool)&quot; sign /f &quot;$(KeyFile)&quot; /p $(CertPassword) /t http://timestamp.globalsign.com/scripts/timstamp.dll /v /d &quot;logviewer&quot; /du https://github.com/aegoroff/logviewer &quot;@(SigningInput)&quot;"/>
  </Target>
  
  <Target Name="BeforeBuild">
    <ItemGroup>
      <MsiFile Include="$(MSBuildProjectDirectory)\..\logviewer.install\bin\$(Configuration)\*.msi" />
    </ItemGroup>
	<CreateItem Include="@(MsiFile)">
       <Output ItemName="SigningInput" TaskParameter="Include"/>
    </CreateItem>
	<Exec Command="MSBuild $(MsBuildThisFile) /t:SignCommand /nologo /noconsolelogger"/>
  </Target>
  <Target Name="AfterBuild">
    <ItemGroup>
      <MsiFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\*.exe" />
    </ItemGroup>
	<CreateItem Include="@(MsiFile)">
       <Output ItemName="SigningInput" TaskParameter="Include"/>
    </CreateItem>
	<Exec Command="MSBuild $(MsBuildThisFile) /t:SignCommand  /nologo /noconsolelogger"/>
  </Target>
  <!--
	To modify your build process, add your task inside one of the targets below and uncomment it.
	Other similar extension points exist, see Wix.targets.
	<Target Name="BeforeBuild">
	</Target>
	<Target Name="AfterBuild">
	</Target>
	-->
</Project>